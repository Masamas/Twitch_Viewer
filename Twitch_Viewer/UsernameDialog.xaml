<Window x:Class="Twitch_Viewer.UsernameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Viewer"
        mc:Ignorable="d"
        Title="Username Needed" Height="168" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="textBoxUserName" Height="23" Margin="70,65,102,0" Text="Username" VerticalAlignment="Top" MaxLength="37" Foreground="LightGray" GotFocus="textBoxUserName_GotFocus" LostFocus="textBoxUserName_LostFocus" KeyDown="textBoxUserName_KeyDown"/>
        <TextBlock x:Name="textBlock" Margin="70,44,57,0" TextWrapping="Wrap" Text="Please enter your Username:" VerticalAlignment="Top"/>
        <Button x:Name="buttonDone" Content="Done" HorizontalAlignment="Left" Margin="195,65,0,0" VerticalAlignment="Top" Width="28" FontSize="9" Height="23" Click="buttonDone_Click"/>

    </Grid>
</Window>
