<Window x:Class="Twitch_Viewer.DebugSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Viewer"
        mc:Ignorable="d"
        Title="DebugSettingsWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Debug Settings" FontFamily="Arial Black" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" />
            <Grid Margin="5,5,10,10">
                <TextBlock Text="Disable 30 second limit on stats?" HorizontalAlignment="Left" />
                <CheckBox IsChecked="{Binding DebugStatsLimit}" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
